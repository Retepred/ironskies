<!DOCTYPE html>
<html>
<head>
  <title>IronSkies</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</head>
<body>

<div class='login'>
  <% if user_signed_in? %>
    <%= current_user.email %>
    <%= link_to "Log out", destroy_user_session_path, method: :delete %>
  <% else %>
    <%= link_to "Sign In", new_user_session_path %>
    <%= link_to "Register", new_user_registration_path %>
  <% end %>
</div>


<div class="main_menu">
  <nav>
      <ul>
        <li class='myButton'> <%= link_to('Home', root_path) %> </li>
        <li class='myButton'> <%= link_to('Games', games_path) %> </li>
        <li class='myButton'> <%= link_to('Players', users_path) %></li>
        <li class='myButton'> <%= link_to('Instructions', instructions_path) %></li>
      </ul>
  </nav>
</div>

<%= yield %>

</body>
</html>
